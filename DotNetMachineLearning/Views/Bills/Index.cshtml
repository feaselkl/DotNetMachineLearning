@model DotNetMachineLearning.Models.BillsViewModel

@{
    ViewData["Title"] = "Win Estimator";
}

<h1>2018 Bills Win Estimator</h1>

<h4>Inputs</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Quarterback" class="control-label"></label>
                <select asp-for="Quarterback" class="form-control">
                    <option value="Josh Allen">Josh Allen</option>
                    <option value="Derek Anderson">Derek Anderson</option>
                    <option value="Matt Barkley">Matt Barkley</option>
                    <option value="Nathan Peterman">Natan Peterman</option>
                </select>
                <span asp-validation-for="Quarterback" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Location" class="control-label"></label>
                <select asp-for="Location" class="form-control">
                    <option value="Home">Home</option>
                    <option vlaue="Away">Away</option>
                </select>
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfPointsScored" class="control-label"></label>
                <input asp-for="NumberOfPointsScored" class="form-control" />
                <span asp-validation-for="NumberOfPointsScored" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TopReceiver" class="control-label"></label>
                <select asp-for="TopReceiver" class="form-control">
                    <option value="Kelvin Benjamin">Kelvin Benjamin</option>
                    <option value="Charles Clay">Charles Clay</option>
                    <option value="Robert Foster">Robert Foster</option>
                    <option value="Chris Ivory">Chris Ivory</option>
                    <option value="Zay Jones">Zay Jones</option>
                    <option value="LeSean McCoy">LeSean McCoy</option>
                </select>
                <span asp-validation-for="TopReceiver" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TopRunner" class="control-label"></label>
                <select asp-for="TopRunner" class="form-control">
                    <option value="Josh Allen">Josh Allen</option>
                    <option value="Keith Ford">Keith Ford</option>
                    <option value="Chris Ivory">Chris Ivory</option>
                    <option value="LeSean McCoy">LeSean McCoy</option>
                    <option value="Marcus Murphy">Marcus Murphy</option>
                </select>
                <span asp-validation-for="TopRunner" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Find the Likelist Outcome" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>